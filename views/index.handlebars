<div class="container">

  <div class="row">
    <div class="empty-cells" id="odd-cell"></div>
    <div class="empty-cells" id="even-cell"></div>
    <div class="empty-cells" id="odd-cell title">
      <h1>Eat-Da-Burger</h1>

      <img src="../../assets/img/burger.jpg" style="width: 200px; height: 100px">
    </div>
    <div class="empty-cells" id="even-cell"></div>
    <div class="empty-cells" id="odd-cell"></div>
  </div>

  <div class="row">
    <div class="empty-cells" id="odd-cell"></div>
    <div class="burger-displays" id="even-cell">
      <h2>Burgers to Devour!!</h2>
      <ol>
        {{#each burger}} {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour" data-id="{{id}}" data-newDevour="{{devour}}"> Devour</button>
        </li>
        {{/unless}} {{/each}}
      </ol>
    </div>
    <div class="burger-displays" id="odd-cell">
      <h1 style="color: yellow">Add a Burger!</h1>
      <form class="create-form">
        <div class="form-group">
          <label for="burger-field" style="color: yellow">Burger Name:</label>
          <input type="text" id="burger-field" name="burger_name">
        </div>
        <button type="submit">Add-A-Burger</button>
      </form>
    </div>
    <div class="burger-displays" id="even-cell">
      <h2>Burgers Devoured!!</h2>

      <ol>
        {{#each burger}} {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}} {{/each}}
      </ol>
    </div>
    <div class="empty-cells" id="odd-cell"></div>
  </div>

  <div class="row">
    <div class="empty-cells" id="odd-cell"></div>
    <div class="empty-cells" id="even-cell"></div>
    <div class="empty-cells" id="odd-cell"></div>
    <div class="empty-cells" id="even-cell"></div>
    <div class="empty-cells" id="odd-cell"></div>
  </div>

</div>